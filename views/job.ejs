<%- include("partials/head.ejs") %> <%- include("partials/header.ejs") %>
<% if (!job) { %>
<h1>Add New Job Entry</h1>
<form method="POST" action="/jobs">
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  <div>
    <label name="company">Company Name:</label>
    <input name="company" />
  </div>
  <div>
    <label name="position">Position:</label>
    <input name="position" />
  </div>
  <div>
    <!-- This form field should be a drop-down list -->
    <label name="status">Status:</label>
    <input name="status" />
  </div>
  <div>
    <button onClick="submit">Add Job</button>
    <a href="/jobs">
      <button type="button">Cancel</button>
    </a>
  </div>
  <input type="hidden" id="job" name="job" value="job._id" />
</form>

<% } else { %>

  <h1>Edit Job Entry</h1>
<form method="POST" action="/jobs/update/<% job.id %>">
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  <div>
    <label name="company" ">Company Name:</label>
    <input name="company" value="<%= job.company %>" />
  </div>
  <div>
    <label name="position">Position:</label>
    <input name="position" value="<%= job.position %>"/>
  </div>
  <div>
    <!-- This form field should be a drop-down list -->
    <label name="status">Status:</label>
    <input name="status" value="<%= job.status %>"/>
  </div>
  <div>
    <button onClick="submit">Add Job</button>
    <a href="/jobs">
      <button type="button">Cancel</button>
    </a>
  </div>
  <input type="hidden" id="job" name="job" value="job._id" />
</form>


<% } %> 

<%- include("partials/footer.ejs") %>
